// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model User {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  templates Template[]
}

model Template {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}